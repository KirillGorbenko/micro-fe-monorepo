{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "moduleDetection": "auto",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}