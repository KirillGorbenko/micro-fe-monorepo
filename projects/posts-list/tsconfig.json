{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleDetection": "auto",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}