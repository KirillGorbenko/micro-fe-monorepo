{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./build/",
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "paths": {
      "packages/*": ["./packages/*"],
      "projects/*": ["./projects/*"],
    }
  },
  "files": ["index.ts"],
  "exclude": ["node_modules", "public"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}